<!DOCTYPE html>
<html>
<head>
  <title>View Tasks</title>
  <style>
    body {
      background-color: rgb(17, 2, 17);
      color: white;
      font-family:sans-serif;
      display: flex;
      flex-direction:column;
      align-items: center;
      padding: 30px;
    }

    h1 {
      margin-bottom: 30px;
    }

    .task-box {
      background-color: white;
      color: black;
      border-radius: 15px;
      padding: 20px;
      width: 300px;
      margin-bottom: 20px;
      box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
    }

    .task-box h3 {
      margin: 0 0 10px 0;
    }

    .checkbox-wrapper {
      display: flex;
      align-items: center;
      margin-top: 10px;
    }

    .checkbox-wrapper label {
      margin-left: 10px;
      font-size: 14px;
    }

    input[type="checkbox"] {
      transform: scale(1.3);
      accent-color: #8e44ad;
    }
    .task-box:hover
    {
      box-shadow: 0 0 20px violet;
    }
    
  </style>
</head>
<body>
  <div class="head">
  <h1>üìã Your Tasks</h1>
  </div>

  <% if (tasks.length === 0) { %>
    <p>No tasks added yet.</p>
     <% } else { %>
    <% tasks.forEach(task => { %>
  <form action="/delete/<%= task._id %>" method="POST">
    <div class="task-box">
      <h3><%= task.title %></h3>
      <p>üìÖ <%= task.date %> ‚è∞ <%= task.time %></p>
      <div class="checkbox-wrapper">
        <input 
          type="checkbox" 
          onchange="this.form.submit()" 
          title="Mark as completed" />
        <label>Mark as completed</label>
      </div>
    </div>
  </form>
<% }) %>

  <% } %>

</body>
</html>
