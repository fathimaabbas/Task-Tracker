<!DOCTYPE html>
<html>
<head>
  <title>View Tasks</title>
 <style>
    body {
       background:linear-gradient(to right,rgb(255, 97, 242),rgb(74, 29, 80),rgb(12, 0, 18));
      color: white;
      font-family: sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 30px;
    }

    h1 {
      margin-bottom: 30px;
    }

    .task-box {
      background-color: white;
      color: black;
      border-radius: 15px;
      padding: 20px;
      width: 300px;
      margin-bottom: 20px;
      box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
      transition: 0.3s ease;
    }

    .task-box:hover {
      box-shadow: 0 0 20px violet;
    }

    .task-box p {
      margin: 5px 0;
    }

    button {
      margin-top: 10px;
      padding: 5px 10px;
      border: none;
      border-radius: 5px;
      background-color: #8e44ad;
      color: white;
      cursor: pointer;
    }

    button:hover {
      background-color: #732d91;
    }

    #streak-box {
      position: fixed;
      top: 10px;
      left: 10px;
      background-color: #ffe0e0;
      padding: 10px 15px;
      border-radius: 10px;
      font-weight: bold;
      cursor: pointer;
      color: black;
    }

    #streak-message {
      display: none;
      position: fixed;
      top: 50px;
      left: 10px;
      background-color: #fff;
      color: black;
      border: 1px solid #ccc;
      padding: 10px;
      border-radius: 8px;
      width: 220px;
    }
    #popup {
  position: fixed;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  background-color:violet;
  color: black;
  padding: 20px 30px;
  border-radius: 15px;
  font-size: 18px;
  font-weight: bold;
  display: none;
  animation: popupFade 0.5s ease-in-out;
  box-shadow: 0 0 15px #00ffcc;
  z-index: 999;
}
.streak-box {
  position: absolute;
  top: 10px;
  left: 10px;
  background-color: #ffe082;
  padding: 8px 15px;
  border-radius: 12px;
  font-weight: bold;
  color: #000;
  box-shadow: 0 0 10px rgba(0,0,0,0.2);
  cursor: pointer;
}


@keyframes popupFade {
  0% {
    opacity: 0;
    transform: translate(-50%, -20px);
  }
  100% {
    opacity: 1;
    transform: translate(-50%, 0);
  }
}

  </style>
</head>
<body>
<!-- üî• Streak Box -->
 <!-- üî• Streak Box -->
<div id="streak-box" onclick="window.location.href='/streak'">
  üî• <%= streakCount %>-day streak
</div>



  <!-- üí¨ Streak Message -->
  <div id="streak-message">
    You‚Äôve completed tasks for <%= streakCount %> day(s) in a row!
  </div>
  <div id="popup">üî• Congrats! Today's streak counted!</div>

  <h1>üìù Your Tasks</h1>

  <% if (tasks.length === 0) { %>
    <p>No tasks found.</p>
  <% } %>

  <% tasks.forEach(task => { %>
  <% if (!task.completed) { %>
    <div class="task-box">
      <p><strong>Title:</strong> <%= task.title %></p>
      <p><strong>Date:</strong> <%= task.date %></p>
      <p><strong>Time:</strong> <%= task.time %></p>
      <form action="/tasks/<%= task._id %>/complete" method="POST">
        <button type="submit">Mark as Complete</button>
      </form>
    </div>
  <% } %>
<% }) %>
<% if (showStreakWin) { %>
  <script>
    const popup = document.getElementById('popup');
    popup.style.display = 'block';
    setTimeout(() => {
      popup.style.display = 'none';
    }, 3000);
  </script>
<% } %>


  <script>
    function toggleStreak() {
      const msg = document.getElementById('streak-message');
      msg.style.display = msg.style.display === 'none' ? 'block' : 'none';
    }
  </script>


</body>
</html>
